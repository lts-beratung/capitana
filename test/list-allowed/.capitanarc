variables:
  environment:
    - dev
    - int
    - prod
microservices:
  server:
  allowedStages:
    - push
  transceiver:
    allowedStages:
      - build
      - deploy
  gateway: ~
  database: ~
stages:
  build:
    run: sleep 1
  push:
    run: sleep 1 && echo 'Found an error while executing the script' 1>&2
  deploy:
    variables:
      - environment
    run: sleep 1
